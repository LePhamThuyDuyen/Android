<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutItem">

    <ImageView
        android:id="@+id/imageView_Ps"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lamington" />

    <TextView
        android:id="@+id/textViewName_Ps"
        android:layout_width="198dp"
        android:layout_height="94dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/dancingdcript_demidold"
        android:text="Blueberry Cheesecake"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_Ps"
        app:layout_constraintTop_toTopOf="@+id/imageView_Ps" />

    <TextView
        android:id="@+id/textViewGia_Ps"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:text="120.000đ"
        android:textSize="24dp"
        android:textColor="#913"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Ps"
        app:layout_constraintEnd_toEndOf="@+id/textViewName_Ps"
        app:layout_constraintTop_toBottomOf="@+id/textViewName_Ps" />

    <TextView
        android:id="@+id/textViewNote_Ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạm hết hàng"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGia_Ps"
        app:layout_constraintStart_toStartOf="@+id/textViewName_Ps"
        app:layout_constraintTop_toTopOf="@+id/textViewGia_Ps" />
</androidx.constraintlayout.widget.ConstraintLayout>